---
import Sidebar from '../components/Sidebar.astro';
import Search from '../components/Search.svelte';
import ShaderBg from '../components/ShaderBg.svelte';
import { ClientRouter } from 'astro:transitions';
import '../styles/global.css';

interface Props {
  title?: string;
  description?: string;
  lang?: string;
  dir?: string;
  activePage?: string;
  image?: string;
  publishedDate?: Date;
  tags?: string[];
  type?: 'website' | 'article';
}

const {
  title = 'Omid Saadat',
  description = 'Technical Artist. Tool builder. Simplifier of complicated things.',
  lang = 'en',
  dir = 'ltr',
  activePage = 'now',
  image,
  publishedDate,
  tags,
  type = 'website',
} = Astro.props;

const siteUrl = Astro.site?.toString().replace(/\/$/, '') || 'https://www.omid-saadat.com';
const canonicalUrl = new URL(Astro.url.pathname, siteUrl).href;
const ogImage = image ? `${siteUrl}${image}` : `${siteUrl}/assets/img/profile-picture.png`;
const pageTitle = title === 'Omid Saadat' ? title : `${title} — Omid Saadat`;

const jsonLd = type === 'article'
  ? {
      '@context': 'https://schema.org',
      '@type': 'BlogPosting',
      headline: title,
      description,
      image: ogImage,
      author: { '@type': 'Person', name: 'Omid Saadat', url: siteUrl },
      ...(publishedDate && { datePublished: publishedDate.toISOString() }),
      url: canonicalUrl,
    }
  : {
      '@context': 'https://schema.org',
      '@type': 'WebSite',
      name: 'Omid Saadat',
      description,
      url: siteUrl,
      author: { '@type': 'Person', name: 'Omid Saadat', url: siteUrl },
    };
---

<!DOCTYPE html>
<html lang={lang} dir={dir}>
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>{pageTitle}</title>
  <meta name="description" content={description} />
  <meta name="theme-color" content="#1b1b1e" />
  <link rel="canonical" href={canonicalUrl} />

  <!-- Open Graph -->
  <meta property="og:title" content={pageTitle} />
  <meta property="og:description" content={description} />
  <meta property="og:type" content={type} />
  <meta property="og:url" content={canonicalUrl} />
  <meta property="og:image" content={ogImage} />
  <meta property="og:locale" content={lang === 'fa' ? 'fa_IR' : 'en_US'} />
  {type === 'article' && publishedDate && (
    <meta property="article:published_time" content={publishedDate.toISOString()} />
  )}
  {type === 'article' && tags && tags.map(tag => (
    <meta property="article:tag" content={tag} />
  ))}

  <!-- Twitter -->
  <meta name="twitter:card" content="summary_large_image" />
  <meta name="twitter:title" content={pageTitle} />
  <meta name="twitter:description" content={description} />
  <meta name="twitter:image" content={ogImage} />

  <!-- RSS -->
  <link rel="alternate" type="application/rss+xml" title="Omid Saadat" href={`${siteUrl}/rss.xml`} />

  <!-- JSON-LD -->
  <script type="application/ld+json" set:html={JSON.stringify(jsonLd)} />

  <link rel="icon" type="image/x-icon" href="/favicon.ico" />
  <link rel="icon" type="image/png" sizes="32x32" href="/assets/img/favicons/favicon-32x32.png" />
  <link rel="icon" type="image/png" sizes="16x16" href="/assets/img/favicons/favicon-16x16.png" />
  <link rel="apple-touch-icon" sizes="180x180" href="/assets/img/favicons/apple-touch-icon.png" />
  <link rel="preconnect" href="https://fonts.googleapis.com" />
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
  <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Literata:ital,opsz,wght@0,7..72,300;0,7..72,400;0,7..72,500;1,7..72,300;1,7..72,400&family=DM+Sans:ital,opsz,wght@0,9..40,300;0,9..40,400;0,9..40,500;1,9..40,300&family=Vazirmatn:wght@300;400&display=swap" />
  <ClientRouter />
</head>
<body>
  <a href="#main" class="skip-to-content">Skip to main content</a>
  <ShaderBg client:only="svelte" transition:persist="shader" />
  <Sidebar activePage={activePage} />
  <Search client:load transition:persist="search" />
  <main id="main" class="main" transition:name="content">
    <div class="content">
      <slot />
      <footer class="main-footer fade-in">
        <span>&copy; Omid Saadat &middot; Düsseldorf</span>
        <div class="footer-links">
          <a href="https://github.com/omid3098" target="_blank" rel="noopener noreferrer">GitHub</a>
          <a href="https://linkedin.com/in/omidsaadat" target="_blank" rel="noopener noreferrer">LinkedIn</a>
          <a href="/resume">Resume</a>
          <a href="mailto:info@omid-saadat.com">Say hello</a>
        </div>
      </footer>
    </div>
  </main>

  <script>
    document.addEventListener('astro:page-load', () => {
      const obs = new IntersectionObserver(entries => {
        entries.forEach(e => { if (e.isIntersecting) e.target.classList.add('visible'); });
      }, { threshold: 0.1 });
      document.querySelectorAll('.reveal').forEach(el => obs.observe(el));

      const bgObs = new IntersectionObserver(entries => {
        entries.forEach(e => {
          if (e.isIntersecting) {
            const el = e.target as HTMLElement;
            el.style.backgroundImage = `url('${el.dataset.bg}')`;
            bgObs.unobserve(el);
          }
        });
      }, { rootMargin: '200px' });
      document.querySelectorAll('[data-bg]').forEach(el => bgObs.observe(el));
    });
  </script>
</body>
</html>
